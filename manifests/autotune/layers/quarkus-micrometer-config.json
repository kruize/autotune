{
  "apiVersion": "recommender.com/v1",
  "kind": "KruizeLayer",
  "metadata": {
    "name": "quarkus"
  },
  "layer_name": "quarkus",
  "details": "quarkus tunables",
  "layer_presence": {
    "queries": [
      {
        "datasource": "prometheus",
        "query": "container_cpu_usage_seconds_total{} * on(namespace, pod) group_left(com.redhat.component-name) kube_pod_labels{com.redhat.component-name: \"Quarkus\"}",
        "key": "pod"
      }
    ]
  },
  "tunables": [
    {
      "name": "quarkus.thread-pool.core-threads",
      "description": "The core thread pool size. This number of threads will always be kept alive.",
      "value_type": "integer",
      "lower_bound": "1",
      "upper_bound": "10",
      "step": 1
    }
  ]
}

