{
  "apiVersion": "recommender.com/v1",
  "kind": "KruizeLayer",
  "metadata": {
    "name": "container"
  },
  "layer_name": "container",
  "layer_level": 0,
  "details": "generic container tunables",
  "layer_presence": {
    "presence": "always"
  },
  "tunables": [
    {
      "name": "memoryRequest",
      "value_type": "double",
      "lower_bound": "512",
      "upper_bound": "2048",
      "step": 1,
      "units": "Mi"
    },
    {
      "name": "memoryLimit",
      "value_type": "double",
      "lower_bound": "512",
      "upper_bound": "2048",
      "step": 1,
      "units": "Mi"
    },
    {
      "name": "cpuRequest",
      "value_type": "double",
      "lower_bound": "1.0",
      "upper_bound": "3.0",
      "step": 0.01,
      "units": "cores"
    },
    {
      "name": "cpuLimit",
      "value_type": "double",
      "lower_bound": "1.0",
      "upper_bound": "3.0",
      "step": 0.01,
      "units": "cores"
    }

  ]
}

